// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json",     /* Recommended React Native TSConfig base */
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    /* Completeness */
    "skipLibCheck": true,                                 /* Skip type checking all .d.ts files. */


    "baseUrl": ".",
    "paths": {
      "*": ["./*"],
      "@*": ["src/*"],
      "@root/*": ["./*"],
      "@src/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@fonts/*": ["src/assets/fonts/*"],
      "@images/*": ["src/assets/images/*"],
      "@components/*": ["src/components/*"],
      "@partials/*": ["src/components/_partials/*"],
      "@constants/*": ["src/constants/*"],
      "@hooks/*": ["src/hooks/*"],
      "@i18n/*": ["src/i18n/*"],
      "@models/*": ["src/models/*"],
      "@navigations/*": ["src/navigations/*"],
      "@layouts/*": ["src/layouts/*"],
      "@screens/*": ["src/screens/*"],
      "@store/*": ["src/store/*"],
      "@themes/*": ["src/themes/*"],
      "@utils/*": ["src/utils/*"],
      "react-native-webrtc": ["node_modules/@types/react-native-webrtc"] // Los types definitions de react-native-webrtc estan malos, esto hace que se use @types/react-native-webrtc
    }
  }
}
